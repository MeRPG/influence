<?xml version="1.0" encoding="UTF-8" ?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <xs:complexType name="font">

        <xs:attribute name="name" type="xs:string" use="required"/>
        <xs:attribute name="scalexy" type="xs:float" use="optional"/>
        <xs:attribute name="scalex" type="xs:float" use="optional"/>
        <xs:attribute name="scaley" type="xs:float" use="optional"/>
        <xs:attribute name="bitmap" type="xs:string" use="optional"/>

    </xs:complexType>

    <xs:complexType name="fonts">
        <xs:sequence maxOccurs="unbounded" minOccurs="0" >
            <xs:element name="font" type="font" minOccurs="0" maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>


    <xs:element name="fonts" type="fonts"/>

</xs:schema>